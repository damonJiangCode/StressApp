<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MyXamarinApp.ViewModels"
    x:DataType="viewmodels:AccountViewModel"
    x:Class="MyXamarinApp.Views.AccountPage"
    BackgroundColor="DarkGray">

    <ContentPage.ToolbarItems>

        <ToolbarItem Text="{Binding textDisplay}"
                     Command="{Binding LoginOrSignoutCommand}"
                     Order="Primary"
                     Priority="0" />

    </ContentPage.ToolbarItems>


    <ContentPage.Content>

        <StackLayout Margin="10, 10, 10, 10">

            <Button Text="Profile"
                    Command="{Binding ClickCommand}"
                    IsVisible="{Binding ButtonDisplay}"/>
            

            <Button Text="bla"
                    />
            <Button Text="blabla"
                    />
            <Button Text="blablabla"
                    />
            <Button Text="blablablabla"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

