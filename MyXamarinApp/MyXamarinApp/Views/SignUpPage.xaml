<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyXamarinApp.Views.SignUpPage">

    <ContentPage.Content>

        <StackLayout Orientation="Vertical"
                     Padding="30"
                     Spacing="50"
                     BackgroundColor="Beige">

            <BoxView HeightRequest="1"/>

            <Image HorizontalOptions="Center"
                   WidthRequest="300"
                   Source="icon_about.png"/>

            <Frame BackgroundColor="LightSeaGreen"
                   HasShadow="True">

                <StackLayout Orientation="Vertical"
                             Spacing="10">
                    
                    <Entry x:Name="UserName"
                           Text="{Binding Password}"
                           Placeholder="Type user name"   
                           PlaceholderColor="LightSeaGreen"
                           HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="LightSeaGreen"/>

                    <Entry x:Name="Email"
                           Text="{Binding Email}"
                           Placeholder="Type email"   
                           PlaceholderColor="LightSeaGreen"
                           HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="LightSeaGreen"/>

                    <Entry x:Name="PhoneNumber"
                           Text="{Binding Password}"
                           Placeholder="Type phone number"   
                           PlaceholderColor="LightSeaGreen"
                           HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="LightSeaGreen"/>

                    <Entry x:Name="Password"
                           Text="{Binding Password}"
                           Placeholder="Type password"   
                           PlaceholderColor="LightSeaGreen"
                           HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="LightSeaGreen"/>

                    <Entry x:Name="CheckPassword"
                           Text="{Binding Password}"
                           Placeholder="Type password one more time"   
                           PlaceholderColor="LightSeaGreen"
                           HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="LightSeaGreen"/>

                </StackLayout>

            </Frame>

            <Button Command="{Binding SignUpCommand}"
                    Text="Sign up"
                    TextColor="White"  
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalOptions="FillAndExpand"  
                    BackgroundColor="LightSeaGreen" />

        </StackLayout>

    </ContentPage.Content>

</ContentPage>

